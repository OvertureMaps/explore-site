{
  "id": "place-label",
  "type": "symbol",
  "source": "places",
  "source-layer": "place",
  "metadata": {
    "overture:theme": "places",
    "overture:type": "place",
    "overture:group": "places",
    "overture:selectable": true,
    "overture:item": "place"
  },
  "minzoom": 14,
  "filter": [
    "==",
    [
      "geometry-type"
    ],
    "Point"
  ],
  "layout": {
    "text-field": [
      "get",
      "@name"
    ],
    "text-font": [
      "$globals.font.noto-sans-regular"
    ],
    "text-size": 12,
    "text-offset": [
      0,
      1.2
    ],
    "text-anchor": "top",
    "text-max-width": 8,
    "text-allow-overlap": false
  },
  "paint": {
    "text-color": "$places.place.color.text",
    "text-halo-color": "$places.place.color.textHalo",
    "text-halo-width": 1.5
  }
}
