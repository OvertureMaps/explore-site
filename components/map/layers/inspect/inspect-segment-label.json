{
  "id": "inspect-segment-label",
  "type": "symbol",
  "source": "transportation",
  "source-layer": "segment",
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:group": "transportation-labels",
    "overture:selectable": false
  },
  "minzoom": 13,
  "layout": {
    "text-field": [
      "get",
      "@name"
    ],
    "text-font": [
      "$globals.font.noto-sans-regular"
    ],
    "text-size": 11,
    "symbol-placement": "line",
    "text-allow-overlap": false
  },
  "paint": {
    "text-color": "$inspect.segment.color.text",
    "text-halo-color": "$inspect.segment.color.textHalo",
    "text-halo-width": 1
  }
}
