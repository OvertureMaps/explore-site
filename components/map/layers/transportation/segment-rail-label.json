{
  "id": "segment-rail-label",
  "type": "symbol",
  "source": "transportation",
  "source-layer": "segment",
  "minzoom": 13,
  "filter": [
    "==",
    ["get", "subtype"],
    "rail"
  ],
  "layout": {
    "text-field": ["get", "@name"],
    "text-font": ["$globals.font.noto-sans-regular"],
    "text-size": ["interpolate", ["linear"], ["zoom"], 13, 8, 18, 12],
    "text-max-angle": 30,
    "symbol-placement": "line",
    "symbol-spacing": ["interpolate", ["linear"], ["zoom"], 13, 200, 18, 500]
  },
  "paint": {
    "text-color": "$transportation.rail.color.text",
    "text-halo-color": "$transportation.rail.color.textHalo",
    "text-halo-width": 1
  },
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:group": "transportation-rail",
    "overture:selectable": true,
    "overture:item": "rail"
  }
}
