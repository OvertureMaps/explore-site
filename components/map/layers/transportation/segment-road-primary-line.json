{
  "id": "segment-road-primary-line",
  "type": "line",
  "source": "transportation",
  "source-layer": "segment",
  "minzoom": 12,
  "filter": [
    "all",
    ["==", ["get", "subtype"], "road"],
    ["==", ["get", "class"], "primary"]
  ],
  "paint": {
    "line-color": "$transportation.road.color.roadFill",
    "line-width": [
      "interpolate",
      ["exponential", 1.5],
      ["zoom"],
      7, 0.3,
      10, 0.7,
      12, 2,
      16, 6,
      20, 12
    ]
  },
  "layout": {
    "line-cap": "round",
    "line-join": "round"
  },
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:group": "transportation-roads",
    "overture:selectable": true,
    "overture:item": "road-primary"
  }
}
