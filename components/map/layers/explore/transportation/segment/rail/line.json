{
  "type": "line",
  "source": "transportation",
  "source-layer": "segment",
  "minzoom": 12,
  "filter": [
    "==",
    [
      "get",
      "subtype"
    ],
    "rail"
  ],
  "paint": {
    "line-color": "$transportation.rail.color.line",
    "line-width": [
      "interpolate",
      [
        "exponential",
        1.5
      ],
      [
        "zoom"
      ],
      8,
      0.2,
      12,
      0.5,
      16,
      2,
      20,
      4
    ],
    "line-dasharray": [
      2,
      2
    ]
  },
  "layout": {
    "line-cap": "round",
    "line-join": "round"
  },
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:group": "transportation-rail",
    "overture:selectable": true,
    "overture:item": "rail"
  }
}
