{
  "type": "line",
  "source": "transportation",
  "source-layer": "segment",
  "minzoom": 12,
  "filter": [
    "==",
    [
      "get",
      "class"
    ],
    "motorway"
  ],
  "paint": {
    "line-color": "$transportation.motorway.color.roadFill",
    "line-width": [
      "interpolate",
      [
        "exponential",
        1.5
      ],
      [
        "zoom"
      ],
      12,
      3,
      16,
      8,
      20,
      16
    ]
  },
  "layout": {
    "line-cap": "round",
    "line-join": "round"
  },
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:group": "transportation-roads",
    "overture:selectable": true,
    "overture:item": "road-motorway"
  }
}
