{
  "type": "line",
  "source": "transportation",
  "source-layer": "segment",
  "minzoom": 15,
  "filter": [
    "all",
    [
      "==",
      [
        "get",
        "subtype"
      ],
      "road"
    ],
    [
      "match",
      [
        "get",
        "class"
      ],
      [
        "pedestrian",
        "footway",
        "path",
        "track",
        "cycleway",
        "bridleway"
      ],
      true,
      false
    ]
  ],
  "layout": {
    "line-cap": "round",
    "line-join": "round"
  },
  "paint": {
    "line-color": "$transportation.pedestrian.color.roadFill",
    "line-width": [
      "interpolate",
      [
        "exponential",
        1.5
      ],
      [
        "zoom"
      ],
      12,
      0,
      18,
      6,
      22,
      80
    ]
  },
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:group": "transportation-pedestrian",
    "overture:selectable": true,
    "overture:item": "road-pedestrian"
  }
}
