{
  "type": "line",
  "source": "transportation",
  "source-layer": "segment",
  "maxzoom": 14,
  "paint": {
    "line-color": "$transportation.segment.color.roadFill",
    "line-width": [
      "interpolate",
      ["exponential", 1.5],
      ["zoom"],
      1,
      0,
      4,
      0.25,
      10,
      1,
      13,
      2
    ],
    "line-opacity": [
      "interpolate",
      ["exponential", 1.5],
      ["zoom"],
      1,
      0,
      4,
      0.7,
      10,
      1
    ]
  },
  "layout": {
    "line-cap": "round",
    "line-join": "round"
  },
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:selectable": true,
    "overture:group": "transportation-roads"
  }
}
