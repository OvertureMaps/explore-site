{
  "type": "symbol",
  "source": "places",
  "source-layer": "place",
  "minzoom": 14,
  "filter": [
    "all",
    [
      "==",
      [
        "geometry-type"
      ],
      "Point"
    ],
    [
      ">=",
      [
        "get",
        "confidence"
      ],
      [
        "step",
        [
          "zoom"
        ],
        0.99,
        15,
        0.97,
        16,
        0.95,
        17,
        0.9
      ]
    ],
    [
      "match",
      "$extract:categories.primary",
      [
        "stadium_arena",
        "baseball_stadium",
        "basketball_stadium",
        "cricket_ground",
        "football_stadium",
        "hockey_arena",
        "rugby_stadium",
        "soccer_stadium",
        "tennis_stadium",
        "track_stadium"
      ],
      true,
      false
    ]
  ],
  "layout": {
    "text-field": [
      "get",
      "@name"
    ],
    "text-justify": "auto",
    "text-line-height": 1,
    "text-max-width": 6,
    "text-radial-offset": 1.1,
    "text-size": 12,
    "text-variable-anchor": [
      "literal",
      [
        "right",
        "left",
        "top",
        "bottom"
      ]
    ],
    "text-font": "$places.filtered",
    "icon-image": "stadium",
    "icon-allow-overlap": false,
    "icon-padding": 2,
    "icon-size": 0.75
  },
  "metadata": {
    "overture:theme": "places",
    "overture:type": "place",
    "overture:group": "places-categories",
    "overture:selectable": true,
    "overture:item": "stadium"
  }
}
