{
  "id": "division-label-lowzoom",
  "type": "symbol",
  "source": "divisions",
  "source-layer": "division",
  "maxzoom": 9,
  "filter": [
    "all",
    [
      "step",
      ["zoom"],
      [
        "in",
        ["get", "subtype"],
        ["literal", ["country", "dependency"]]
      ],
      5,
      [
        "in",
        ["get", "subtype"],
        ["literal", ["country", "dependency", "region"]]
      ],
      7,
      [
        "in",
        ["get", "subtype"],
        ["literal", ["country", "dependency", "region", "county"]]
      ]
    ],
    [
      "<=",
      ["length", ["get", "@name"]],
      [
        "step",
        ["zoom"],
        15,
        3,
        25,
        5,
        50,
        7,
        999
      ]
    ]
  ],
  "layout": {
    "text-field": ["get", "@name"],
    "text-font": ["$divisions.division.subtype.font.regular"],
    "text-size": [
      "interpolate",
      ["linear"],
      ["zoom"],
      0,
      ["match", ["get", "subtype"], "country", 11, "dependency", 10, 8],
      4,
      ["match", ["get", "subtype"], "country", 12, "dependency", 11, "region", 9, 8],
      8,
      ["match", ["get", "subtype"], "country", 14, "dependency", 13, "region", 11, "county", 9, 7]
    ],
    "text-transform": "uppercase",
    "text-letter-spacing": 0.1,
    "text-max-width": 8,
    "text-allow-overlap": false
  },
  "paint": {
    "text-color": "$divisions.division.subtype.color.text",
    "text-halo-color": "$divisions.division.subtype.color.textHalo",
    "text-halo-width": 1.5
  },
  "metadata": {
    "overture:theme": "divisions",
    "overture:type": "division",
    "overture:group": "divisions-labels",
    "overture:selectable": true,
    "overture:item": "division_label"
  }
}
