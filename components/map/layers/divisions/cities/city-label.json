{
  "id": "city-label",
  "type": "symbol",
  "source": "divisions",
  "source-layer": "division",
  "maxzoom": 14,
  "filter":["all",
    ["match", ["get", "subtype"], ["locality"], true, false],
    ["step", ["zoom"],
      [">=", ["get", "population"], 1000000],
      11, [">=", ["get", "population"], 50000],
      12, [">=", ["get", "population"], 10000],
      13, true
    ]
  ],
  "layout": {
    "text-field": ["get", "@name"],
    "text-font": ["case", [">=", ["get", "population"], 1000000], ["literal", "$divisions.division.fonts.bold"], ["literal", "$divisions.division.fonts.medium"]],
    "text-size": [
      "interpolate", ["linear"], ["zoom"],
      10, ["case", [">=", ["get", "population"], 1000000], 22, 18],
      12, ["case", [">=", ["get", "population"], 50000], 24, 20],
      14, ["case", [">=", ["get", "population"], 10000], 28, 24]
    ],
    "text-transform": "uppercase",
    "text-max-width": 8,
    "text-allow-overlap": false
  },
  "paint": {
    "text-color": "$divisions.division.city.color.text",
    "text-halo-color": "$divisions.division.city.color.textHalo",
    "text-halo-width": 1.5
  },
  "metadata": {
    "overture:theme": "divisions",
    "overture:type": "division",
    "overture:group": "divisions-cities",
    "overture:selectable": true,
    "overture:item": "city_label"
  }
}
