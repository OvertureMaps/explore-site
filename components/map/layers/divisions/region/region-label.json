{
  "id": "region-label",
  "type": "symbol",
  "source": "divisions",
  "source-layer": "division",
  "maxzoom": 11,
  "filter": [
    "all",
    ["in", ["get", "subtype"], ["literal", ["region", "macroregion"]]],
    [
      "<=",
      ["length", ["get", "@name"]],
      ["step", ["zoom"], 15, 6, 30, 8, 999]
    ]
  ],
  "layout": {
    "text-field": ["get", "@name"],
    "text-font": ["match",
      ["get", "subtype"],["region"], ["literal", "$divisions.division.fonts.medium"], ["literal", "$divisions.division.fonts.regular"]
    ],
    "text-size": [
      "interpolate", ["linear"], ["zoom"],
      4, ["match", ["get", "subtype"], "region", 9,6],
      9, ["match", ["get", "subtype"], "region", 15, 12],
      12, ["match", ["get", "subtype"], "region", 21, 18]
    ],
    "text-transform": "uppercase",
    "text-letter-spacing": 0.1,
    "text-max-width": 8,
    "text-allow-overlap": false
  },
  "paint": {
    "text-color": "$divisions.division.region.color.text",
    "text-halo-color": "$divisions.division.region.color.textHalo",
    "text-halo-width": 1.1
  },
  "metadata": {
    "overture:theme": "divisions",
    "overture:type": "division",
    "overture:group": "divisions-region",
    "overture:selectable": true,
    "overture:item": "region_label"
  }
}
