{
  "id": "country-label",
  "type": "symbol",
  "source": "divisions",
  "source-layer": "division",
  "maxzoom": 9,
  "filter": [
    "all",
    ["match", ["get", "subtype"],["country", "dependency"], true, false],
    [
      "<=",
      ["length", ["get", "@name"]],
      ["step", ["zoom"], 15, 3, 25, 5, 50, 7, 999]
    ]
  ],
  "layout": {
    "text-field": ["get", "@name"],
    "text-font": ["match",
      ["get", "subtype"],["country"], ["literal", "$divisions.division.fonts.medium"], ["literal", "$divisions.division.fonts.regular"]
    ],
    "text-size": [
      "interpolate", ["linear"], ["zoom"],
      2, ["match", ["get", "subtype"], "country", 10, 7],
      4, ["match", ["get", "subtype"], "country", 13, 10],
      9, ["match", ["get", "subtype"], "country", 19, 16],
      12, ["match", ["get", "subtype"], "country", 25, 22]
    ],
    "text-transform": "uppercase",
    "text-letter-spacing": 0.15,
    "text-max-width": 8,
    "text-allow-overlap": false
  },
  "paint": {
    "text-color": "$divisions.division.country.color.text",
    "text-halo-color": "$divisions.division.country.color.textHalo",
    "text-halo-width": 1.2
  },
  "metadata": {
    "overture:theme": "divisions",
    "overture:type": "division",
    "overture:group": "divisions-country",
    "overture:selectable": true,
    "overture:item": "country_label"
  }
}
