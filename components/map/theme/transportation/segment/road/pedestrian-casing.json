{
  "id": "segment-road-pedestrian-casing",
  "type": "line",
  "source": "transportation",
  "source-layer": "segment",
  "minzoom": 15,
  "filter": [
    "all",
    ["==", ["get", "subtype"], "road"],
    ["match", ["get", "class"], ["pedestrian", "footway", "path", "track", "cycleway", "bridleway"], true, false]
  ],
  "layout": { "line-cap": "round", "line-join": "round" },
  "paint": {
    "line-color": ["step", ["zoom"], "hsla(0, 0%, 0%, 0)", 18, "$transportation.pedestrian.color.casing"],
    "line-width": ["interpolate", ["exponential", 1.5], ["zoom"], 14, 0.5, 18, 1, 22, 2],
    "line-gap-width": ["interpolate", ["exponential", 1.5], ["zoom"], 12, 0, 18, 6, 22, 80]
  },
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:group": "transportation-pedestrian",
    "overture:selectable": false,
    "overture:item": "road-pedestrian"
  }
}
