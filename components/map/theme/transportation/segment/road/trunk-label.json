{
  "id": "segment-road-trunk-label",
  "type": "symbol",
  "source": "transportation",
  "source-layer": "segment",
  "minzoom": 13,
  "filter": [
    "all",
    ["==", ["get", "subtype"], "road"],
    ["==", ["get", "class"], "trunk"]
  ],
  "layout": {
    "text-field": ["get", "@name"],
    "text-font": ["$globals.font.noto-sans.medium"],
    "text-size": ["interpolate", ["linear"], ["zoom"], 12, 7, 15, 10, 18, 15],
    "text-letter-spacing": 0.15,
    "text-max-angle": 30,
    "text-transform": "uppercase",
    "symbol-placement": "line",
    "symbol-spacing": ["interpolate", ["linear"], ["zoom"], 12, 150, 18, 450, 22, 1500]
  },
  "paint": {
    "text-color": "$transportation.road.color.text",
    "text-halo-color": "$transportation.road.color.textHalo",
    "text-halo-width": 1
  },
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:group": "transportation-roads",
    "overture:selectable": true,
    "overture:item": "road-trunk"
  }
}
