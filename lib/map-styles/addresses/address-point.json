{
  "id": "address-point",
  "type": "circle",
  "source": "addresses",
  "source-layer": "address",
  "filter": [
    "==",
    [
      "geometry-type"
    ],
    "Point"
  ],
  "paint": {
    "circle-color": "$addresses.address.color",
    "circle-radius": [
      "interpolate",
      [
        "exponential",
        2
      ],
      [
        "zoom"
      ],
      0,
      1,
      17,
      5
    ],
    "circle-opacity": 0.4
  },
  "layout": {},
  "metadata": {
    "overture:theme": "addresses",
    "overture:type": "address",
    "overture:pass": "geometry",
    "overture:color": "$addresses.address.color",
    "overture:activeColor": "$addresses.address.activeColor"
  }
}
