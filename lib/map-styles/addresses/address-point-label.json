{
  "id": "address-point-label",
  "type": "symbol",
  "source": "addresses",
  "source-layer": "address",
  "filter": [
    "==",
    [
      "geometry-type"
    ],
    "Point"
  ],
  "minzoom": 17,
  "paint": {
    "text-color": "$addresses.address.textColor",
    "text-halo-color": "$addresses.address.textHaloColor",
    "text-halo-width": 1
  },
  "layout": {
    "text-font": "$global.fonts.regular",
    "text-field": [
      "get",
      "@name"
    ],
    "text-size": "$global.fonts.sizeSm",
    "text-radial-offset": 0,
    "text-justify": "auto",
    "text-line-height": 1,
    "text-padding": 12,
    "text-max-width": 4
  },
  "metadata": {
    "overture:theme": "addresses",
    "overture:type": "address",
    "overture:pass": "labels"
  }
}
