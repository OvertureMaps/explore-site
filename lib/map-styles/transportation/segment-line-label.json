{
  "id": "segment-line-label",
  "type": "symbol",
  "source": "transportation",
  "source-layer": "segment",
  "filter": [
    "==",
    [
      "geometry-type"
    ],
    "LineString"
  ],
  "paint": {
    "text-color": "$transportation.segment.textColor",
    "text-halo-color": "$transportation.segment.textHaloColor",
    "text-halo-width": 1
  },
  "layout": {
    "text-font": "$global.fonts.regular",
    "text-field": [
      "get",
      "@name"
    ],
    "text-size": "$global.fonts.sizeMd",
    "symbol-placement": "line-center"
  },
  "metadata": {
    "overture:theme": "transportation",
    "overture:type": "segment",
    "overture:pass": "labels"
  }
}
