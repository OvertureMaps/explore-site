{
  "id": "infrastructure-point",
  "type": "circle",
  "source": "base",
  "source-layer": "infrastructure",
  "filter": [
    "==",
    [
      "geometry-type"
    ],
    "Point"
  ],
  "paint": {
    "circle-color": "$base.infrastructure.color",
    "circle-radius": [
      "interpolate",
      [
        "exponential",
        2
      ],
      [
        "zoom"
      ],
      0,
      1,
      17,
      6
    ],
    "circle-opacity": 0.4
  },
  "layout": {},
  "metadata": {
    "overture:theme": "base",
    "overture:type": "infrastructure",
    "overture:pass": "geometry",
    "overture:color": "$base.infrastructure.color",
    "overture:activeColor": "$base.infrastructure.activeColor",
    "overture:activeOnly": true
  }
}
